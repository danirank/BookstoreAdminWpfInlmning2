<Window x:Class="BookstoreAdminWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookstoreAdminWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--AllaBokaffärer-->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
         </Grid.RowDefinitions>
            
             <TextBlock  Margin="5" HorizontalAlignment="Center">Alla Bokaffärer</TextBlock>
            <StackPanel Grid.Row="1">
                <ScrollViewer  >
                    <DataGrid x:Name="StoresGrid"
                     AutoGenerateColumns="False"
                   ColumnWidth="Auto"
                   CanUserAddRows="False"
                   IsReadOnly="True"
                  Margin="10"
                 ItemsSource="{Binding Stores}"
                 SelectedItem ="{Binding SelectedStore}"
                   >
                        <DataGrid.Columns>
                            <DataGridTextColumn MinWidth="250" Header="Namn"
                            Binding="{Binding Name}" />

                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
            </StackPanel>

        </Grid>
       
        <!--Inventory för vald affär-->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Margin="5" HorizontalAlignment="Center">
                <Run Text="Lager: " />
                <Run Text="{Binding SelectedStore.Name}" />
            </TextBlock>
            
            <StackPanel Grid.Row="1">
        
            <ScrollViewer MaxHeight="150" >
                    <DataGrid ItemsSource="{Binding Inventory}"
                         AutoGenerateColumns="False"
                          ColumnWidth="*"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                         Margin="10">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Bok" IsReadOnly="True"
                    Binding="{Binding Isbn13Navigation.Title}" />
                            <DataGridTextColumn Header="Antal"
                    Binding="{Binding Quantity}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
        </StackPanel>

            <!--Alla böcker-->
        </Grid>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Margin="5" HorizontalAlignment="Center">Alla böcker</TextBlock>
       
            <ScrollViewer Grid.Row="1" >
                <DataGrid Name="AllBooksGrid"
                          AutoGenerateColumns="False"
                          Margin="10"
                          ColumnWidth="Auto"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          ItemsSource="{Binding Books}"
                          SelectedItem="{Binding SelectedBook}"
                          MouseDoubleClick="EditSelectedBookButton_Click">
                          
                          
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Titel"
                            Binding="{Binding Title}" />
                        <DataGridTextColumn Header="Författare"
                            Binding="{Binding Writer.FullName, Mode=OneWay}"  />
                        <DataGridTextColumn Header="Pris" 
                            Binding="{Binding Price}" />
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Grid>
        
        
        <!--Knappar för att hantera böcker för att redigera bok-->
        <StackPanel Grid.Column="2" Grid.Row="1">
            <Button x:Name="EditBookBtn" Content="Redigera vald bok" Click="EditSelectedBookButton_Click" Margin="5"/>
            <Button x:Name="NewBookButton" Content="Lägg till ny bok" Click="NewBookButton_Click" Margin="5"/>
            <Button x:Name="DeleteBookBtn" Content="Ta bort bok från databas" Click="DeleteBookBtn_Click" Margin="5"/>
        </StackPanel>
        
        <!--Info om val butik-->
        
            <StackPanel Grid.Column="0" Grid.Row="1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Margin="20,0,0,0" FontSize="15" FontWeight="Bold" Text="Namn: "/>
                    <TextBlock FontStyle="Italic" FontSize="15" Text="{Binding SelectedStore.Name}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="20,0,0,0" FontSize="15" FontWeight="Bold" Text="Land: "/>
                <TextBlock FontStyle="Italic"  FontSize="15" Text="{Binding SelectedStore.Country}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="20,0,0,0" FontSize="15" FontWeight="Bold" Text="Adress: "/>
                <TextBlock FontStyle="Italic"  FontSize="15" Text="{Binding SelectedStore.FullAdress}"/>
                </StackPanel>
                <StackPanel  Orientation="Horizontal">
                    <TextBlock Margin="20,0,0,0" FontSize="15" FontWeight="Bold" Text="Total värde på inventory: "/>
                    <TextBlock FontSize="15" Text="{Binding TotalInventoryValue}"/>
                </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Tag="1"  x:Name="EditStoreBtn" Click="EditStoreBtn_Click" Margin="20,20,0,0">Redigera butik</Button>
                <Button Tag="2" x:Name="NewStoreBtn" Click="EditStoreBtn_Click" Margin="20,20,0,0">Ny Butik</Button>
                <Button Tag="3" x:Name="DeleteStoreBtn" Click="EditStoreBtn_Click" Margin="20,20,0,0">Radera Butik</Button>

            </StackPanel>
                
                
            <StackPanel x:Name="EditStorePanel" Visibility="Hidden">
                <TextBlock Margin="20,5,0,0" Text="Namn"/>
                <TextBox x:Name="StoreNamebox" Margin="20,5,0,0" Text="{Binding SelectedStore.Name}"/>
                <TextBlock Margin="20,5,0,0" Text="Land"/>
                <TextBox x:Name="StoreCountryBox" Margin="20,5,0,0" Text="{Binding SelectedStore.Country}"/>
                <TextBlock Margin="20,5,0,0" Text="Gata"/>
                <TextBox x:Name="StoreStreetBox" Margin="20,5,0,0" Text="{Binding SelectedStore.Street}"/>
                <TextBlock Margin="20,5,0,0" Text="Stad"/>
                <TextBox x:Name="StoreCityBox" Margin="20,5,0,0" Text="{Binding SelectedStore.City}"/>
                <TextBlock Margin="20,5,0,0" Text="Postkod"/>
                <TextBox x:Name="StorePostalCodeBox" Margin="20,5,0,20" Text="{Binding SelectedStore.PostalCode}"/>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="ConfirmStoreUpdate" Click="ConfirmStoreUpdate_Click" Margin="20" Content="Uppdatera butik"/>
                    <Button x:Name="CancelBtn" Click="CancelBtn_Click" Margin="20" Content="Avbryt"/>
                </StackPanel>
                
            </StackPanel>
            </StackPanel>
       
    </Grid>
</Window>
