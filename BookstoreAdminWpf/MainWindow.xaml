<Window x:Class="BookstoreAdminWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookstoreAdminWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!--AllaBokaffärer-->
        <StackPanel Grid.Column="0">
            <TextBlock Margin="5" HorizontalAlignment="Center">Alla Bokaffärer</TextBlock>
            <ScrollViewer >
                <DataGrid x:Name="StoresGrid"
                            AutoGenerateColumns="False"
                          ColumnWidth="Auto"
                          CanUserAddRows="False"
                          IsReadOnly="True"
          Margin="10"
          SelectionChanged="StoresGrid_SelectionChanged"
          ItemsSource="{Binding Stores}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Namn"
            Binding="{Binding Name}" />
                        
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </StackPanel>
        
        <!--Inventory för vald affär-->
        <StackPanel Grid.Column="1">
            <TextBlock x:Name="InventoryHeader" Margin="5" HorizontalAlignment="Center">Lager</TextBlock>
            <ScrollViewer >
                <DataGrid ItemsSource="{Binding Inventory}"
                         AutoGenerateColumns="False"
                          ColumnWidth="*"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                         Margin="10">
                        
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Bok" IsReadOnly="True"
                    Binding="{Binding Isbn13Navigation.Title}" />
                        <DataGridTextColumn Header="Antal"
                    Binding="{Binding Quantity}" />
                    </DataGrid.Columns>
                </DataGrid>

            </ScrollViewer>
        </StackPanel>
        
        <!--Alla böcker-->
        <StackPanel Grid.Column="2">
            <TextBlock Margin="5" HorizontalAlignment="Center">Alla böcker</TextBlock>
            <ScrollViewer >
                <DataGrid Name="AllBooksGrid"
                          AutoGenerateColumns="False"
                          Margin="10"
                          ColumnWidth="Auto"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          ItemsSource="{Binding Books}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Titel"
                            Binding="{Binding Title}" />
                        <DataGridTextColumn Header="Författare"
                            Binding="{Binding Writer.FullName, Mode=OneWay}"  />
                        <DataGridTextColumn Header="Pris" 
                            Binding="{Binding Price}" />
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </StackPanel>
        
    </Grid>
</Window>
