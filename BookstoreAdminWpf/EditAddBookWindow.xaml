<Window x:Class="BookstoreAdminWpf.EditAddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookstoreAdminWpf"
        mc:Ignorable="d"
        Title="EditAddBookWindow" Height="650" Width="600"
        WindowStartupLocation="CenterOwner">

    <Grid>
        
        <ScrollViewer>
        <StackPanel Margin="20">

            <TextBlock Text="ISBN13" />
            <TextBox x:Name="ISBN13Box"
                 Text="{Binding Book.Isbn13}"
                 Margin="0,5,0,10"/>

            <TextBlock Text="Titel" />
            <TextBox x:Name="TitleBox"
                 Text="{Binding Book.Title}"
                 Margin="0,5,0,10"/>

            <TextBlock Text="Genre" />

            <!-- Genre: ComboBox max bredd, knapp till höger -->
            <Grid Margin="0,5,0,10">
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />

                    </Grid.ColumnDefinitions>

                <ComboBox x:Name="GenreBox"
                      ItemsSource="{Binding Genres}"
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding SelectedGenre}"
                      Grid.Column="0"
                      Margin="0,0,10,0"/>

                <Button x:Name="AddNewGenreBtn"
                    Content="Ny Genre"
                     Margin="0,0,5,0"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                        Click="AddNewGenreBtn_Click"/>
                    <Button x:Name="DeleteGenreBtn"
                        Content="Radera Genre"
                        Grid.Column="2"
                         Tag="1"
                        VerticalAlignment="Center"
                        Click="DeleteBtn_Click"/>
                </Grid>

                <Grid Visibility="Collapsed" x:Name="NewGenreGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>

                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Namn på Genre"/>
                    <TextBox Grid.Row="1" Grid.Column="0" x:Name="NewGenreBox"/>

                    <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal"
                        HorizontalAlignment="Right">
                        <Button Content="Spara"
                 Width="80"
                 Margin="5,0,5,0"
                Click="Save_Click"
                    Tag="2"/>
                      <Button Content="Avbryt"
                    Width="80"
                     Tag="2"
                    Click="Cancel_Click"/>
                       
                    </StackPanel>
                </Grid>

                <TextBlock Text="Author" />

            <!-- Author: ComboBox max bredd, knapp till höger -->
            <Grid Margin="0,5,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                <ComboBox x:Name="AuthorBox"
                      ItemsSource="{Binding Writers}"
                      DisplayMemberPath="FullName"
                      SelectedItem="{Binding SelectedWriter}"
                      Grid.Column="0"
                      Margin="0,0,10,0"/>
                

                <Button x:Name="AddNewWritherBtn"
                    Content="Ny författare"
                         Margin="0,0,5,0"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                        Click="AddNewWritherBtn_Click"/>
                    <Button x:Name="DeleteWriterBtn"
                        Content="Radera författare"
                    Grid.Column="2"
                            Tag="2"
                    VerticalAlignment="Center"
                     Click="DeleteBtn_Click"/>

                </Grid>

                <Grid Visibility="Collapsed" x:Name="NewWriterGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>

                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Förnamn"/>
                    <TextBox Margin="5" Grid.Row="1" Grid.Column="0" x:Name="NewWriterFirstNameBox"/>

                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Efternamn"/>
                    <TextBox Margin="5" Grid.Row="1" Grid.Column="1" x:Name="NewWriterLastNameBox"/>

                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Födelsedag"/>
                    <DatePicker Grid.Column="2" Grid.Row="1" x:Name="NewWriterBirthday"
                                 SelectedDateFormat="Short"
                                    Margin="0,5,0,10" />


                    <StackPanel Grid.Column="3" Grid.Row="1" Orientation="Horizontal"
                        HorizontalAlignment="Right">
                        <Button Content="Spara"
                            Width="80"
                            Margin="5,0,5,0"
                            Click="Save_Click"
                                Tag="3"/>
                        <Button Content="Avbryt"
                                Width="80"
                                Tag="3"
                                Click="Cancel_Click"/>
                       
                    </StackPanel>
                </Grid>


                <TextBlock Text="Pubslisher" />

            <!-- Author: ComboBox max bredd, knapp till höger -->
            <Grid Margin="0,5,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

            <ComboBox x:Name="PublisherBox"
                  ItemsSource="{Binding Publishers}"
                  DisplayMemberPath="Name"
                  SelectedItem="{Binding SelectedPublisher}"
                  Grid.Column="0"
                  Margin="0,0,10,0"/>

                <Button x:Name="AddNewPublisher"
                    Content="Ny Publisher"
                    Grid.Column="1"
                         Margin="0,0,5,0"
                    VerticalAlignment="Center"
                        Click="AddNewPublisher_Click"/>
                    <Button x:Name="DeletePublisherBtn"
                        Content="Radera publisher"
                            Tag="3"
                     Grid.Column="2"
                    VerticalAlignment="Center"
                     Click="DeleteBtn_Click"/>
                </Grid>


                <Grid Visibility="Collapsed" x:Name="NewPublisherGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>

                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Namn på Pusblisher"/>
                    <TextBox Grid.Row="1" Grid.Column="0" x:Name="NewPublisherBox"/>

                    <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal"
                        HorizontalAlignment="Right">
                        <Button Content="Spara"
                        Width="80"
                    Margin="5,0,5,0"
                    Click="Save_Click"
                     Tag="4"/>
                        <Button Content="Avbryt"
                         Width="80"
                          Tag="4"
                        Click="Cancel_Click"/>
                        
                    </StackPanel>
                </Grid>


                <TextBlock Text="Language" />
            <TextBox x:Name="LangBox"
                 Text="{Binding Book.Language}"
                 Margin="0,5,0,10"/>

            <TextBlock Text="Pris" />
            <TextBox x:Name="PriceBox"
                 Text="{Binding Book.Price}"
                 Margin="0,5,0,10"/>

                <TextBlock Text="Release Date" />
                <DatePicker SelectedDate="{Binding Book.ReleaseDateAsDateTime, Mode=TwoWay}"
                    SelectedDateFormat="Short"
                     Margin="0,5,0,10" />


                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
                <Button Content="Spara"
                    Width="80"
                    Margin="0,0,5,0"
                    Click="Save_Click"
                    Tag="1"/>
                <Button Content="Avbryt"
                    Width="80"
                    Tag="1"
                    Click="Cancel_Click"/>
            </StackPanel>

        </StackPanel>

        </ScrollViewer>
    </Grid>

</Window>
