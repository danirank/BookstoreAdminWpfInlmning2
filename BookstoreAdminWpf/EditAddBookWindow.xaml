<Window x:Class="BookstoreAdminWpf.EditAddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookstoreAdminWpf"
        mc:Ignorable="d"
        Title="EditAddBookWindow" Height="450" Width="400"
        WindowStartupLocation="CenterOwner">

    <Grid>
        
        <ScrollViewer>
        <StackPanel Margin="20">

            <TextBlock Text="ISBN13" />
            <TextBox x:Name="ISBN13Box"
                 Text="{Binding Book.Isbn13}"
                 Margin="0,5,0,10"/>

            <TextBlock Text="Titel" />
            <TextBox x:Name="TitleBox"
                 Text="{Binding Book.Title}"
                 Margin="0,5,0,10"/>

            <TextBlock Text="Genre" />

            <!-- Genre: ComboBox max bredd, knapp till höger -->
            <Grid Margin="0,5,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <!-- ComboBox fyller ut -->
                    <ColumnDefinition Width="Auto" />
                    <!-- Knapp tar minsta möjliga -->
                </Grid.ColumnDefinitions>

                <ComboBox x:Name="GenreBox"
                      ItemsSource="{Binding Genres}"
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding SelectedGenre}"
                      Grid.Column="0"
                      Margin="0,0,10,0"/>

                <Button x:Name="AddNewGenreBtn"
                    Content="Add new Genre"
                    Grid.Column="1"
                    VerticalAlignment="Center"/>
            </Grid>

            <TextBlock Text="Author" />

            <!-- Author: ComboBox max bredd, knapp till höger -->
            <Grid Margin="0,5,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <ComboBox x:Name="AuthorBox"
                      ItemsSource="{Binding Writers}"
                      DisplayMemberPath="FullName"
                      SelectedItem="{Binding SelectedWriter}"
                      Grid.Column="0"
                      Margin="0,0,10,0"/>

                <Button x:Name="AddNewWritherBtn"
                    Content="Add new Writer"
                    Grid.Column="1"
                    VerticalAlignment="Center"/>
            </Grid>
            
            
            <TextBlock Text="Pubslisher" />

            <!-- Author: ComboBox max bredd, knapp till höger -->
            <Grid Margin="0,5,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

            <ComboBox x:Name="PublisherBox"
                  ItemsSource="{Binding Publishers}"
                  DisplayMemberPath="Name"
                  SelectedItem="{Binding SelectedPublisher}"
                  Grid.Column="0"
                  Margin="0,0,10,0"/>

                <Button x:Name="AddNewPublisher"
                    Content="Add new Publisher"
                    Grid.Column="1"
                    VerticalAlignment="Center"/>
            </Grid>

            <TextBlock Text="Language" />
            <TextBox x:Name="LangBox"
                 Text="{Binding Book.Language}"
                 Margin="0,5,0,10"/>

            <TextBlock Text="Pris" />
            <TextBox x:Name="PriceBox"
                 Text="{Binding Book.Price}"
                 Margin="0,5,0,10"/>

                <TextBlock Text="Release Date" />
                <DatePicker SelectedDate="{Binding Book.ReleaseDateAsDateTime, Mode=TwoWay}"
                    SelectedDateFormat="Short"
                     Margin="0,5,0,10" />


                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
                <Button Content="Spara"
                    Width="80"
                    Margin="0,0,5,0"
                    Click="Save_Click"/>
                <Button Content="Avbryt"
                    Width="80"
                    Click="Cancel_Click"/>
            </StackPanel>

        </StackPanel>

        </ScrollViewer>
    </Grid>

</Window>
